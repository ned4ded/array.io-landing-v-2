{% import "partials/input-request.njk" as request %}

<div class="container section jumbotron">
  <div class="row section__content">
    <div class="col-12 jumbotron__content">
      {% set logo = assets['logotype-jumbotron'] %}

      <img class="jumbotron__logotype" src="{{ logo.ref }}" alt="{{ logo.alt }}" width="{{ logo.width }}" height="{{ logo.height }}">

      <ul class="jumbotron__download download">
        <li class="download__item download__heading">
          {% set logo = assets['logotype-download'] %}

          <div class="download__logotype">
            <img src="{{ logo.ref }}" alt="{{ logo.alt }}" width="{{ logo.width }}" height="{{ logo.height }}">
          </div>


          <p class="download__paragraph">
            New DApp environment
          </p>
        </li>

        <li class="download__item">
          <p class="download__paragraph download__paragraph--release">
            open-source platform release Q4 2018
          </p>
        </li>

        <li class="download__item">
          {% set lightpaper = assets['lightpaper'] %}

          <a href="{{ lightpaper.ref }}" class="link link--glass download__lightpaper"><span class="link__icon link__icon--download"></span><span class="link__name">Litepaper</span></a>
        </li>
        <li class="download__item">
          {{ request.make('request--glass') }}
        </li>
      </ul>
    </div>

    <ul class="col-12 jumbotron__slogan">
      <li>Simple</li>

      <li>Fast</li>

      <li>Decentralized</li>
    </ul>
  </div>
</div>
