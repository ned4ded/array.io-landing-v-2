{% macro make(mods) %}
<form class="request{{ ' ' + mods if mods }}" action="/" method="post">
  <div class="request__container">
    <input size="10" class="request__input" type="email" name="email" required placeholder="Your Email">
    <button class="request__submit" type="submit">Subscribe</button>
  </div>
</form>
{% endmacro %}
