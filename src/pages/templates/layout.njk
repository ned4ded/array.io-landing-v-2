{% set fm = datasets.get('front-matter') %}

<!doctype html>
<html class="no-js" lang="{{ fm.lang }}">

<head>
  <meta charset="utf-8">
  <meta http-equiv="x-ua-compatible" content="ie=edge">
  <title>{{ fm.title }}</title>
  <meta name="description" content="{{ fm.description }}">
  <meta name="viewport" content="width=device-width">

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap-grid.css" crossorigin="anonymous">
  {# <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Swiper/4.4.1/css/swiper.min.css"> #}
  <link rel="stylesheet" href="css/main.css">
</head>

<body>
  <!--[if lte IE 9]>
  <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="https://browsehappy.com/">upgrade your browser</a> to improve your experience and security.</p>
  <![endif]-->

  <div class="wrapper">
    {% import "partials/site-nav.njk" as nav %}
    {% set links = datasets.get('site-map') %}

    {{ nav.make(links, 'nav--border--bottom') }}

    {% block content %} {% endblock %}

    {% include "partials/footer.njk" %}

    {{ nav.make(links) }}

    <div data-modal-state="closed" id="modal-form" class="instruction__guideline">
      <div class="instruction__msg">
        <p data-modal-heading class="instruction__msg-heading"></p>
        <p data-modal-text class="instruction__msg-text"></p>
      </div>
    </div>

    <div data-modal-state="closed" id="lining" class="lining"></div>
  </div>

  {# <script src="https://cdnjs.cloudflare.com/ajax/libs/Swiper/4.4.1/js/swiper.min.js"></script> #}
  <script
  src="https://code.jquery.com/jquery-3.3.1.min.js"
  integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
  crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/2.2.0/anime.min.js"></script>
  <script type="text/javascript" src="js/main.js"></script>
</body>

</html>
